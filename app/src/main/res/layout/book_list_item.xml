<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/pading"
        android:text="@string/Name"
        android:textColor="@color/NBookC"
        android:textSize="@dimen/T_BookName"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/pading"
        android:text="@string/author"
        android:textSize="@dimen/T_author"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/pading"
        android:text="@string/title"
        android:textSize="@dimen/T_info"
        android:textStyle="italic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineHeight"
        android:layout_marginTop="@dimen/pading"
        android:background="@color/colorAccent" />

</LinearLayout>
